{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["server.ts"]
} 